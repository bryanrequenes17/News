                <a href="/" style="padding-left: 0px">
                    <img src="/images/Logo.jpg" />
                </a>
            </li>
            <li class="version center-align">
                    v0.0.1
            </li>
            <li class="search">
                <div class="search-wrapper">
                    <input id="search" placeholder="Search"><i class="material-icons">search</i>
                    <div class="search-results"></div>
                </div>
